<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@drawable/navigation_header_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:background="@color/formBackground"
        android:padding="@dimen/fab_dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/navigationHeaderUsername"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/navigationHeaderEmail"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/navigationHeaderPhone"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

</LinearLayout>