<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="@string/registerUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="72dp"
        android:id="@+id/registerUsernameTV" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/registerUsernameTV"
        android:layout_alignBottom="@+id/registerUsernameTV"
        android:layout_toRightOf="@+id/registerUsernameTV"
        android:layout_toEndOf="@+id/registerUsernameTV"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:id="@+id/registerUsernameET"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/registerEmailTV"
        android:layout_alignBottom="@+id/registerEmailTV"
        android:layout_toRightOf="@+id/registerEmailTV"
        android:layout_toEndOf="@+id/registerEmailTV"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:id="@+id/registerEmailET"/>

    <TextView
        android:text="@string/loginEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:id="@+id/registerEmailTV"
        android:layout_below="@+id/registerUsernameET"
        android:layout_toLeftOf="@+id/registerUsernameET"
        android:layout_toStartOf="@+id/registerUsernameET"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/registerPhoneTV"
        android:layout_alignBottom="@+id/registerPhoneTV"
        android:layout_toRightOf="@+id/registerPhoneTV"
        android:layout_toEndOf="@+id/registerPhoneTV"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:id="@+id/registerPhoneET"/>

    <TextView
        android:text="@string/registerPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:id="@+id/registerPhoneTV"
        android:layout_below="@+id/registerEmailET"
        android:layout_toLeftOf="@+id/registerEmailET"
        android:layout_toStartOf="@+id/registerEmailET" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/registerPasswordTV"
        android:layout_alignBottom="@+id/registerPasswordTV"
        android:layout_toRightOf="@+id/registerPasswordTV"
        android:layout_toEndOf="@+id/registerPasswordTV"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:id="@+id/registerPasswordET"/>

    <TextView
        android:text="@string/loginPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/registerPasswordTV"
        android:layout_below="@+id/registerPhoneET"
        android:layout_toLeftOf="@+id/registerPhoneET"
        android:layout_toStartOf="@+id/registerPhoneET" />

    <Button
        android:text="@string/registerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registerPasswordET"
        android:layout_toRightOf="@+id/registerPasswordTV"
        android:layout_toEndOf="@+id/registerPasswordTV"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="31dp"
        android:id="@+id/button" />

</RelativeLayout>